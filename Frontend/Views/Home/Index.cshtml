@using System.Web.Optimization
@inherits System.Web.Mvc.WebViewPage

<!DOCTYPE html>
<html ng-app="WolfBooking">
<head>
    <base href="/">
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>WolfBooking</title>

    <link rel="stylesheet" href="Content/bootstrap.min.css" />
    <link rel="stylesheet" href="Content/ui-grid.min.css" />
    <link rel="stylesheet" href="Content/font-awesome.min.css" />
    <link rel="stylesheet" href="Content/breads.css" />
    <link rel="stylesheet" href="Content/login.css" />
    <link rel="stylesheet" href="Content/users.css" />
    <link rel="stylesheet" href="Content/accounting.css" />
    <link rel="stylesheet" href="Content/common.css" />
</head>
<body ng-controller="HomeCtrl">
    <nav class="navbar navbar-dark bg-inverse">
        <a class="navbar-brand" href="/">Wolf</a>
        <ul class="nav navbar-nav">
            <li class="nav-item" ng-show="isMoreThanUser()"><a class="nav-link" href="Breads">{{'Index.Breads' | translate}}</a></li>
            <li class="nav-item" ng-show="isAdministrator()"><a class="nav-link" href="Users">{{'Index.Users' | translate}}</a></li>
            <li class="nav-item" ng-show="isMoreThanUser()"><a class="nav-link" href="Rooms">{{'Index.Rooms' | translate}}</a></li>
            <li class="nav-item" ng-show="isLoggedIn()"><a class="nav-link" href="Breadbookings">{{'Index.Breadbooking' | translate}}</a></li>
            <li class="nav-item" ng-show="isMoreThanUser()"><a class="nav-link" href="Accounting">{{'Index.Accounting' | translate}}</a></li>
            <li class="nav-item float-xs-right pull-right" ng-click="changeLanguage()"><img src="Content/en_de_flags_small.png" width="30"></li>
            <li class="nav-item float-xs-right pull-right" ng-show="isLoggedIn()" ng-click="logout()"><a class="nav-link btn btn-secondary-outline" href="Login">{{'Index.Logout' | translate}}</a></li>
        </ul>
    </nav>

    <div id="mainDiv">
        <div ng-view></div>
    </div>

    @Scripts.Render("~/bundles/angular")
    @Scripts.Render("~/bundles/uiGrid")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/services")
    @Scripts.Render("~/bundles/wolfBooking")
    @Scripts.Render("~/bundles/controllers")
</body>
</html>